<!-- USE TO DESIGN YOUR PAGES-->

<!-- Alert Component -->
<% if flash[:notice] %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= flash[:notice] %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%= flash[:alert] %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

<!-- Card Component -->
<div class="card shadow-sm">
  <div class="card-body">
    <h5 class="card-title"><%= title %></h5>
    <p class="card-text"><%= content %></p>
    <%= link_to "Learn More", link_path, class: "btn btn-primary" %>
  </div>
</div>

<!-- Button Variations -->
<%= link_to "Primary Button", "#", class: "btn btn-primary" %>
<%= link_to "Secondary Button", "#", class: "btn btn-secondary" %>
<%= link_to "Danger Button", "#", class: "btn btn-danger" %>

<!-- Input Field with Label -->
<div class="form-group">
  <%= label_tag :email, "Email Address" %>
  <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter your email" %>
</div>

<!-- Checkbox / Toggle -->
<div class="form-check">
  <%= check_box_tag :vegetarian, "1", false, class: "form-check-input" %>
  <%= label_tag :vegetarian, "Vegetarian", class: "form-check-label" %>
</div>

<!-- Navbar (Fixed Bottom) -->
<nav class="navbar fixed-bottom navbar-light bg-light border-top">
  <div class="container d-flex justify-content-around">
    <%= link_to root_path, class: "nav-link text-center" do %>
      <i class="fas fa-home fa-lg"></i>
    <% end %>
    <%= link_to scan_path, class: "nav-link text-center" do %>
      <i class="fas fa-camera fa-lg"></i>
    <% end %>
    <%= link_to favorites_path, class: "nav-link text-center" do %>
      <i class="fas fa-star fa-lg"></i>
    <% end %>
    <%= link_to profile_path, class: "nav-link text-center" do %>
      <i class="fas fa-user fa-lg"></i>
    <% end %>
  </div>
</nav>

<!-- Profile Avatar Component -->
<div class="text-center">
  <% if current_user.avatar.attached? %>
    <%= image_tag current_user.avatar, class: "rounded-circle img-thumbnail", width: 100, height: 100 %>
  <% else %>
    <i class="fas fa-user-circle fa-5x text-muted"></i>
  <% end %>
</div>

<!-- Modal (Popup) -->
<div class="modal fade" id="infoModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Food Information</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Nutritional details will be displayed here.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
