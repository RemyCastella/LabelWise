<div class="container mt-4">
  <h2 class="text-center mb-4 fw-bold">Profile Settings</h2>

  <%= form_with model: @user, url: profile_path, html: { multipart: true }, method: :patch do |f| %>
    <div class="accordion" id="profileSettingsAccordion">

      <!-- Dietary Preferences -->
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#dietaryPreferences">
            <strong>Dietary Preferences</strong>
          </button>
        </h2>
        <div id="dietaryPreferences" class="accordion-collapse collapse" data-bs-parent="#profileSettingsAccordion">
          <div class="accordion-body">
            <h4 class="fw-bold">Dietary Restrictions</h4>
            <div class="d-flex flex-wrap mb-4">
              <% { vegetarian: "Vegetarian", vegan: "Vegan", keto: "Keto", pork: "Avoid Pork", beef: "Avoid Beef",
                   gluten: "Gluten-Free", lactose: "Lactose-Free", high_protein: "High Protein", low_sodium: "Low Sodium", low_fat: "Low Fat", low_carbs: "Low Carbs" }.each do |key, label| %>
                <div class="form-check me-3">
                  <%= f.check_box key, class: "form-check-input", id: key %>
                  <%= f.label key, label, class: "form-check-label" %>
                </div>
              <% end %>
            </div>

            <h4 class="fw-bold">Daily Intake Limits</h4>
          <div class="row g-3">
            <% [
              { name: :calories, label: "Daily Calorie Limit (kcal)", min: 1000, max: 4000, step: 50 },
              { name: :protein, label: "Protein (g)", min: 10, max: 300, step: 5 },
              { name: :carbohydrates, label: "Carbohydrates (g)", min: 50, max: 500, step: 10 },
              { name: :fat, label: "Fat (g)", min: 10, max: 150, step: 5 },
              { name: :sodium, label: "Sodium (mg)", min: 500, max: 5000, step: 100 }
            ].each do |item| %>
              <div class="col-12">
                <%= f.label item[:name], item[:label], class: "form-label fw-bold" %>
                <div class="d-flex justify-content-between text-muted">
                  <small><%= item[:min] %></small>
                  <small><%= item[:max] %></small>
                </div>

                <div class="progress-container">
                  <input type="range"
                        id="<%= item[:name] %>"
                        name="user[<%= item[:name] %>]"
                        min="<%= item[:min] %>"
                        max="<%= item[:max] %>"
                        step="<%= item[:step] %>"
                        class="form-range slider"
                        value="<%= @user[item[:name]] || item[:min] %>"
                        oninput="updateSliderValue('<%= item[:name] %>', this.value, <%= item[:min] %>, <%= item[:max] %>)">
                  <div class="progress">
                    <div class="progress-bar" id="<%= item[:name] %>-progress" style="width: 0%;"></div>
                  </div>
                </div>

                <p class="text-center mt-1 fw-bold" id="<%= item[:name] %>-value"><%= @user[item[:name]] || '-' %></p>
              </div>
            <% end %>
          </div>

          <script>
            function updateSliderValue(id, value, min, max) {
              document.getElementById(id + "-value").innerText = value;
              let percentage = ((value - min) / (max - min)) * 100;
              document.getElementById(id + "-progress").style.width = percentage + "%";
            }

            // Initialize progress bars based on current values
            document.addEventListener("DOMContentLoaded", function() {
              document.querySelectorAll(".slider").forEach(slider => {
                updateSliderValue(slider.id, slider.value, slider.min, slider.max);
              });
            });
          </script>

          <style>
            .progress-container {
              position: relative;
              width: 100%;
              margin-top: 5px;
            }

            .progress {
              height: 8px;
              border-radius: 5px;
              background-color: #e0e0e0;
              position: absolute;
              top: 50%;
              left: 0;
              width: 100%;
              transform: translateY(-50%);
            }

            .progress-bar {
              height: 100%;
              background-color: #16a34a;
              border-radius: 5px;
            }

            .form-range {
              position: relative;
              z-index: 2;
              width: 100%;
              background: transparent;
            }
          </style>
      </div>
    </div>
  </div>



      <!-- Allergens & Restrictions -->
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#allergensSelection">
            <strong>Allergens & Restrictions</strong>
          </button>
        </h2>
        <div id="allergensSelection" class="accordion-collapse collapse" data-bs-parent="#profileSettingsAccordion">
          <div class="accordion-body">
            <%= f.label :common_allergens, "Common Allergens to Avoid", class: "form-label fw-bold" %>
            <%= f.select :common_allergens, ["Peanut", "Nut", "Dairy", "Egg", "Fish", "Shellfish", "Soy", "Wheat", "Sesame"], {}, { multiple: true, class: "form-select", name: "user[common_allergens][]", id: "common-allergens-select" } %>

            <%= f.label :other_ingredients, "Other Allergens", class: "form-label fw-bold mt-3" %>
            <%= f.text_field :other_ingredients, class: "form-control", placeholder: "Enter other allergens" %>
          </div>
        </div>
      </div>

      <!-- Personal Information -->
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#personalInfo">
            <strong>Personal Information</strong>
          </button>
        </h2>
        <div id="personalInfo" class="accordion-collapse collapse" data-bs-parent="#profileSettingsAccordion">
          <div class="accordion-body">
            <div class="text-center mb-3"></div>
            <div class="row mb-3">
              <div class="col-md-6">
                <%= f.label :first_name, "First Name", class: "form-label fw-bold" %>
                <%= f.text_field :first_name, class: "form-control", placeholder: "Enter first name" %>
              </div>
              <div class="col-md-6">
                <%= f.label :last_name, "Last Name", class: "form-label fw-bold" %>
                <%= f.text_field :last_name, class: "form-control", placeholder: "Enter last name" %>
              </div>
            </div>
            <div class="mb-3">
              <%= f.label :email, "Email Address", class: "form-label fw-bold" %>
              <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Submit Button -->
    <div class="text-center mt-4">
      <%= f.submit "Update Preferences", class: "btn btn-dark w-30" %>
    </div>
  <% end %>

  <!-- Log Out Button -->
  <div class="d-flex justify-content-center mt-2 mb-5">
    <%= form_with url: destroy_user_session_path, method: :delete do %>
      <button class="btn btn-white w-100 logout-btn">Sign Out</button>
    <% end %>
  </div>
</div>

<!-- Tom Select Initialization -->
<script>
  document.addEventListener("DOMContentLoaded", function() {
    new TomSelect("#common-allergens-select", {
      plugins: ['remove_button'],
      persist: false,
      create: false,
    });
  });
</script>
