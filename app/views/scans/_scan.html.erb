<div class="position-relative mt-4 food-details w-100 p-3">
  <!-- Info Icon -->
  <%= link_to "#", data: { bs_toggle: "modal", bs_target: "#food-details-modal" },
        class: "btn btn-dark d-flex align-items-center justify-content-center rounded-circle position-absolute",
        style: "width: 36px; height: 36px; top: 5px; right: 5px;" do %>
    <i class="fa-solid fa-info text-white"></i>
  <% end %>

  <!-- Food Name -->
  <h2 class="fw-bold mb-0"><%= food.name %></h2>

  <!-- Star Button (Now Under See More Icon) -->
  <div class="mt-1" id="star_<%= scan.id %>">
    <%= render partial: "scans/star", locals: { scan: scan, favorite: scan.user.favorited?(scan) } %>
  </div>

  <!-- Energy & Dietary Labels -->
  <div class="mt-2">
    <p class="fw-bold mb-1">Energy: <span class="text-muted"><%= food.calories %> Kcal</span></p>

    <!-- Dietary Badges -->
    <div class="d-flex flex-wrap gap-2">
      <% if user.vegetarian %>
        <span class="badge bg-light text-dark border rounded-pill p-2 d-flex align-items-center">
          <i class="fa-solid fa-seedling me-2 text-success"></i> Vegetarian
          <i class="fa-regular <%= food.vegetarian ? 'fa-thumbs-up text-success' : 'fa-thumbs-down text-danger' %> ms-2"></i>
        </span>
      <% end %>
      <% if user.vegan %>
        <span class="badge bg-light text-dark border rounded-pill p-2 d-flex align-items-center">
          <i class="fa-solid fa-leaf me-2 text-success"></i> Vegan
          <i class="fa-regular <%= food.vegan ? 'fa-thumbs-up text-success' : 'fa-thumbs-down text-danger' %> ms-2"></i>
        </span>
      <% end %>
      <% if user.keto %>
        <span class="badge bg-light text-dark border rounded-pill p-2 d-flex align-items-center">
          <i class="fa-solid fa-bacon me-2 text-purple"></i> Keto
          <i class="fa-regular <%= food.keto ? 'fa-thumbs-up text-success' : 'fa-thumbs-down text-danger' %> ms-2"></i>
        </span>
      <% end %>
      <% if user.gluten %>
        <span class="badge bg-light text-dark border rounded-pill p-2 d-flex align-items-center">
          <i class="fa-solid fa-bread-slice me-2 text-warning"></i> Gluten-Free
          <i class="fa-regular <%= food.gluten ? 'fa-thumbs-up text-success' : 'fa-thumbs-down text-danger' %> ms-2"></i>
        </span>
      <% end %>
    </div>
  </div>

  <!-- Macronutrients -->
  <div class="mt-3 w-100">
    <div class="d-flex align-items-center mb-2 p-2 border rounded" style="background-color: #F8F8F8;">
      <div class="d-flex align-items-center justify-content-center rounded-circle p-2 me-2"
           style="width: 36px; height: 36px; background-color: white; border: 1px solid #ddd;">
        <i class="fa-solid fa-dumbbell text-success"></i>
      </div>
      <p class="mb-0">Protein: <strong><%= food.protein %>g</strong></p>
    </div>
    <div class="d-flex align-items-center mb-2 p-2 border rounded" style="background-color: #F8F8F8;">
      <div class="d-flex align-items-center justify-content-center rounded-circle p-2 me-2"
           style="width: 36px; height: 36px; background-color: white; border: 1px solid #ddd;">
        <i class="fa-solid fa-wheat-awn text-warning"></i>
      </div>
      <p class="mb-0">Carbs: <strong><%= food.carbohydrates %>g</strong></p>
    </div>
    <div class="d-flex align-items-center mb-2 p-2 border rounded" style="background-color: #F8F8F8;">
      <div class="d-flex align-items-center justify-content-center rounded-circle p-2 me-2"
           style="width: 36px; height: 36px; background-color: white; border: 1px solid #ddd;">
        <i class="fa-solid fa-bacon text-danger"></i>
      </div>
      <p class="mb-0">Fat: <strong><%= food.fat %>g</strong></p>
    </div>
    <p class="mb-0">Carbs: <%= food.carbohydrates %>g</p>
  </div>
  <div class="map">
  <h2 class="fs-4">Location</h2>
  <div
      style="width: 100%; height: 200px;"
      data-controller="map"
      data-map-markers-value="<%= @markers %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>
  <!-- Add to Intake Button (Centered) -->
  <div class="mt-3 text-center">
    <%= link_to "Add to intake", new_scan_portion_path(scan), class: "btn btn-dark btn-sm px-3 py-2", style: "margin-bottom: 70px;" %>
  </div>
  <!-- Food Details Modal -->
  <div class="modal fade" id="food-details-modal" tabindex="-1" aria-labelledby="foodModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="foodModalLabel"><%= food.name %></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <h6>Ingredients:</h6>
          <p><%= food.other_ingredients %></p>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
