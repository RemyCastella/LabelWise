<main class="cards-container mt-4 px-3">
  <h2>Favorites</h2>
  <div class="row g-4">
    <% if @favorited_scans.any? %>
      <% @favorited_scans.each do |scan| %>
        <div class="card-product d-flex align-item-center">
          <%= link_to "", scan_path(scan) %>
          <div class="img">
            <%= cl_image_tag scan.photo.key,
                  alt: "Scan Image" %>
          </div>
          <% if scan.food %>
            <div class="card-product-infos">
              <h6 class="fw-bold mb-1 text-truncate"><%= scan.food.name %></h6>
              <p class="text-muted small mb-1">üî• <strong><%= scan.food.calories %></strong> kcal</p>
              <p class="text-muted small">ü•© <%= scan.food.protein %>g | üçû <%= scan.food.carbohydrates %>g | ü•ë <%= scan.food.fat %>g</p>
            </div>
          <% end %>
          <div class="favorite-icon">
            <%= render partial: "scans/star", locals: { scan: scan, favorite: scan.user.favorited?(scan) } %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</main>
