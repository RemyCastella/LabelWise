<div class="container min-vh-100 d-flex flex-column align-items-center">
  <%= cl_image_tag @scan.photo.key, class: "w-50" %>
  <% if @scan.food.present? %>
    <%= render partial: "scans/scan", locals: { scan: @scan } %>
  <% else %>
    <div class="mt-4" id="scan_<%= @scan.id %>_food">
      <%= turbo_stream_from "info_#{@scan.id}" %>
      <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
      </div>
    </div>
  <% end %>
  <%= link_to "Add to portion", new_scan_portion_path(@scan.id), class: "btn btn-primary"%>
</div>
