<div class="hero">
  <nav class="align-self-end p-3 d-flex gap-2">
    <%= link_to "Scan",  "#scan", class: "fs-3"%>
    <%= link_to "See",  "#see", class: "fs-3"%>
    <%= link_to "Eat",  "#eat", class: "fs-3"%>
  </nav>
  <div>
    <h1>Know<br>
      what you<br>
      eat
    </h1>
    <h2 class="word-wrapper"
    data-controller="shuffle" data-shuffle-target="word"></h2>
    <%= link_to "Get started", new_user_session_path, class: "d-inline-block btn btn-primary btn-lg text-white mt-4"%>
  </div>
</div>
<section class="p-2" id="scan">
  <h2>📸 Scan</h2>
  <%= image_tag "grocery-scanner", alt: "scanning", class: "w-100 rounded"%>
</section>
<section class="p-2" id="see">
  <h2>🕵️ See</h2>
</section>
<section class="p-2" id="eat">
  <h2>🍔 Eat</h2>
</section>
